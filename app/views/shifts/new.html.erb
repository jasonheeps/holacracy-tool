<div class="shifts-new-page-container box">
  <div class="shifts">
    <ul>
      <% @shifts.each do |s| %>
        <li><p> <%= "#{s.weekday}, #{s.time_start.strftime('%H:%M')}-#{s.time_end.strftime('%H:%M')}: #{s.role.title}" %> </p></li>
      <% end %>
    </ul>
  </div>

  <%= render 'shared/shift-form' %>
</div>
