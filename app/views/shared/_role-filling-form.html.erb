<div class="form-container">
  <%= simple_form_for @role_filling do |f| %>
    <div class="form-inputs">
      <%= f.input :role_id,
                  as: :hidden,
                  required: true,
                  value: @role_id_value %>
      <%= f.input :employee_id,
                  required: true,
                  autofocus: true,
                  as: :select,
                  value: @employee_id_value,
                  collection: @employees_collection,
                  label: 'soulie' %>
      <%= f.input :role_filling_status,
                  as: :select,
                  # Why do I have to use 'selected' instead of 'value' here? 'value' isn't working
                  selected: @role_filling_status_value,
                  collection: @role_filling_statuses_collection,
                  required: true,
                  label: 'Status' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit,
                    locals[:submit_text],
                    class: 'btn-submit' %>
    </div>
  <% end %>
</div>
