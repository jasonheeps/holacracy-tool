<% rf = locals[:role_filling] %>
<% e = rf.employee %>

<div class="card--border-radius role-filling-card d-flex flex-wrap justify-content-between align-items-center bg-white shadow-base">
  <div class="flex-basis-60">
    <p>
      <%= link_to employee_path(e), class: "text__link" do %>
      <%= "#{e.first_name} #{e.last_name}" %>
      <% end %>
    </p>
  </div>

  <div class="d-flex flex-wrap justify-content-between flex-basis-40">
    <div class="d-flex align-items-center">
      <p>
        <%= RoleFilling.enum_to_s(rf.role_filling_status) %>
      </p>
    </div>

    <div class="d-flex align-items-center">
      <p>
        <% if policy(rf).edit? %>
          <%= link_to edit_role_filling_path(rf), class: 'btn--edit-icon mr-xsm' do %>
            <i class="far fa-edit"></i>
          <% end %>
        <% end %>
        <% if policy(rf).destroy? %>
          <%= link_to role_filling_path(rf), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        <% end %>
      </p>
    </div>
  </div>
</div>
