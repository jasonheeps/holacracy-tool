<section class="employee-overview-container d-flex <%= locals[:visibility_class] %>" id="<%= locals[:dataset_id] %>">
  <!-- <h2>Ãœbersicht</h2> -->
  <div class="circles card-basic mr-base stack">
    <div class="img-wrapper">
      <%= image_tag "holacracy_circle.svg",
        alt: "circle icon (a circle with a smaller circle inside)",
        class: "icon--size-xlg"
      %>
    </div>

    <% @circles.each do |c| %>
      <div class="d-block">
        <%= link_to (c.acronym || c.title), circle_path(c), class: 'text__link' %>
      </div>
    <% end %>
  </div>

  <div class="roles card-basic stack">
    <div class="img-wrapper">
      <%= image_tag "holacracy_role.svg",
          alt: "role icon (a circle with a dot inside)",
          class: "icon--size-xlg"
      %>
    </div>

    <% @roles.each do |r| %>
      <div class="d-block">
        <%= link_to role_path(r), class: 'text__link' do %>
          <%= "#{r.acronym || r.title}" %>
          <br>
          <em><%= "#{RoleFilling.find_by(role: r, employee: @employee).humanize_status}" %></em>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
