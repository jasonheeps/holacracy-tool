<% @dataset_ids.each_with_index do |dataset_id, i| %>
  <% visibility_class = i.zero? ? 'visible-content' : 'invisible-content'  %>

  <!-- renders a component with the name of 'dataset_id' (matching a tab), e.g.
  "circle-description" -->
  <%= render "shared/#{dataset_id}",
  locals: {
    visibility_class: "#{visibility_class}",
    dataset_id: dataset_id
  }%>
<% end %>
