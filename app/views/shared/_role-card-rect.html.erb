<% r = locals[:role] %>

<div class="role-card-rect">
  <div class="role-title-container">
    <%= link_to role_path(r) do %>
      <p class="role-title"><%= r.title %></p>
    <% end %>
  </div>
  <div class="role-employees">
    <% r.ccms.each do |ccm| %>
      <%= render 'shared/initials', locals: { employee: ccm, p_class: 'bold' } %>
    <% end %>

    <% r.non_ccms.each do |non_ccm| %>
      <%= render 'shared/initials', locals: { employee: non_ccm } %>
    <% end %>

    <% r.substitutes.each do |s| %>
      <%= render 'shared/initials', locals: { employee: s, div_class: 'seen-through' } %>
    <% end %>
  </div>
</div>
