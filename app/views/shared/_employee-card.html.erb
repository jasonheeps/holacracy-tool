<% e = locals[:employee] %>

<div class="employee-card card-basic" style=<%= "--hue:#{locals[:hue]};" %>>
  <a href=<%="employees/#{e.id}"%> class="link--fill-space"></a>
    <div class="name" >
      <p class="full-name"><%= e.full_name %></p>
      <% if e.nickname %>
        <p><em><%= e.nickname %></em></p>
      <% end %>
    </div>
    <div class="info">
      <div class="circles" >
        <div class="img-wrapper">
          <%= image_tag "holacracy_circle.svg",
            alt: "circle icon (a circle with a smaller circle inside)",
            class: "icon--size-xlg"
          %>
        </div>
        <% e.circles.each do |c| %>
          <p class="circle-title">
            <%= c.acronym || c.title %>
          </p>
        <% end %>
      </div>
      <div class="roles" >
        <div class="img-wrapper">
          <%= image_tag "holacracy_role.svg",
              alt: "role icon (a circle with a dot inside)",
              class: "icon--size-xlg"
          %>
        </div>
        <% e.roles_sorted.each do |r| %>
          <p class="role-title">
            <%= r.acronym || r.title %>
          </p>
        <% end %>
      </div>
    </div>
  </a>
</div>
