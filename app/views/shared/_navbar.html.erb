          <%= image_tag "https://kitt.lewagon.com/placeholder/users/jasonheeps", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Mein Bereich", user_dashboard_path(current_user), class: "dropdown-item" %>
