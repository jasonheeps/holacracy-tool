<% c = locals[:circle] %>
<% sc = c.super_circle %>

<div class="card-wrapper">
  <%= link_to circle_path(c) do  %>
    <div class="circle-card card-basic">
      <div class="circle-card-content">
        <div class="circle-card-icons-top">
          <% if sc %>
            <p class="super-circle-icon"><i class="fas fa-level-up-alt"></i> <%= sc.acronym || pc.title %> </p>
          <% end %>
        </div>
        <div>
          <p class="circle-title bold"> <%= c.acronym || c.title %> </p>
        </div>
        <div class=circle-card-icons-bottom>
          <p class="employee-icon"><i class="fas fa-user"></i> <%= c.employees_unique.count %></p>
          <p class="role-icon"><i class="fas fa-address-card"></i> <%= c.roles.count %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
